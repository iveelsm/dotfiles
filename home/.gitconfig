[diff]
    tool = kitty
    guitool = kitty.gui

[difftool]
    prompt = false
    trustExitCode = true

[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE

[safe]
	directory = /opt/nvm
	directory = /opt/goenv
	directory = /opt/rbenv
	directory = /opt/tfenv

[includeIf "gitdir:~/gatech/"]
    path = ~/.gitconfig.d/gatech

[includeIf "gitdir:~/"]
    path = ~/.gitconfig.d/git
