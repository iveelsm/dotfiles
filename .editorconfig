# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.{diff}]
trim_trailing_whitespace = false

[Makefile]
indent_size = 2
indent_style = tab

[*.yml]
indent_size = 2
indent_style = space

[*.{py}]
indent_size = 4
indent_style = space

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.{md,Rmd,rst}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.txt]
insert_final_newline = false

[*.{yml,yaml,tpl,tpl}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false
